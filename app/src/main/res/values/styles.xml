<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeErrorColor">@color/underline_color</item>
        <item name="hintTextColor">@color/underline_color</item>
        <item name="colorAccent">@color/underline_color</item>
    </style>
    <style name="TextInputHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">"@font/open_sans"</item>
        <item name="fontWeight">600</item>
        <item name="boxStrokeColor">@color/underline_color</item>
        <item name="boxStrokeWidth">@dimen/underline_size</item>
        <item name="colorOnError">@color/underline_color</item>
    </style>

    <style name="AlertDialogAddContact" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>