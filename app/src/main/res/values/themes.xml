<resources>

    <style name="Base.Theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="googleButtonStyle">@style/DefaultGoogleButtonStyle</item>
        <item name="colorPrimary">@color/underline_color</item>
        <item name="colorPrimaryDark">@color/underline_color</item>
        <item name="colorAccent">@color/underline_color</item>
        <item name="colorControlNormal">@color/underline_color</item>
        <item name="colorControlActivated">@color/underline_color</item>
        <item name="colorControlHighlight">@color/underline_color</item>
    </style>

    <style name="DefaultGoogleButtonStyle">
        <item name="buttonColor">#FAFAFA</item>
        <item name="buttonText">@string/GOOGLE</item>
        <item name="buttonTextColor">#18181F</item>
        <item name="buttonCornerRadius">@dimen/border_radius</item>
        <item name="buttonTextFont">@font/open_sans</item>
        <item name="buttonTextFontWeight">600</item>
        <item name="buttonTextFontSize">@dimen/google_text_size</item>
    </style>

    <style name="Theme.AppTheme" parent="Base.Theme"></style>
</resources>